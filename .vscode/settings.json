{
  // 自动保存配置
  "files.autoSave": "afterDelay",  // 编辑后延迟自动保存
  "files.autoSaveDelay": 1000,     // 延迟1秒保存

  // 编辑器格式化配置
  "editor.formatOnSave": true,     // 保存时自动格式化

  // Markdown文件配置（VitePress主要文件类型）
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // TypeScript文件配置（VitePress配置文件类型）
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // JSON文件配置
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}